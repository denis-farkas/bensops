{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .contact-canvas {
        position: relative;
        padding: 5rem 0 5.5rem;
        background: radial-gradient(circle at 15% 20%, rgba(231, 88, 26, 0.15), transparent 45%),
                    radial-gradient(circle at 85% 10%, rgba(255, 255, 255, 0.08), transparent 55%),
                    linear-gradient(160deg, #001a2f 0%, #012341 45%, #001220 100%);
        overflow: hidden;
    }
    .contact-canvas::before,
    .contact-canvas::after {
        content: '';
        position: absolute;
        width: 420px;
        height: 420px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(231, 88, 26, 0.32) 0%, rgba(231, 88, 26, 0) 65%);
        filter: blur(6px);
        opacity: 0.55;
        z-index: 0;
    }
    .contact-canvas::before {
        top: -180px;
        right: -120px;
    }
    .contact-canvas::after {
        bottom: -160px;
        left: -160px;
    }
    .contact-shell {
        position: relative;
        z-index: 1;
    }
    .contact-hero {
        text-align: center;
        max-width: 880px;
        margin: 0 auto 3.5rem;
        color: rgba(245, 249, 255, 0.88);
        padding: 0 1rem;
    }
    .contact-spark {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.45rem 1.1rem;
        border-radius: 999px;
        font-size: 0.82rem;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #ffd7c2;
        border: 1px solid rgba(231, 88, 26, 0.35);
        background: linear-gradient(90deg, rgba(231, 88, 26, 0.22), rgba(231, 88, 26, 0));
        margin-bottom: 1.5rem;
    }
    .contact-hero h1 {
        font-size: 2.8rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 1rem;
        letter-spacing: 0.03em;
    }
    .contact-hero p {
        font-size: 1.15rem;
        line-height: 1.7;
        color: rgba(229, 239, 255, 0.85);
    }
    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.2rem;
        margin-bottom: 3rem;
    }
    .contact-column {
        display: flex;
        flex-direction: column;
        gap: 1.6rem;
    }
    .contact-column--channels {
        position: relative;
    }
    .contact-column--channels::before {
        content: '';
        position: absolute;
        inset: 0;
        margin: auto;
        width: 86%;
        height: 86%;
        border-radius: 28px;
        background: linear-gradient(210deg, rgba(8, 39, 74, 0.9), rgba(1, 16, 28, 0.8));
        border: 1px solid rgba(255, 255, 255, 0.05);
        filter: blur(18px);
        z-index: -1;
        pointer-events: none;
    }
    .contact-module {
        position: relative;
        padding: 1.9rem 1.8rem;
        border-radius: 22px;
        background: linear-gradient(200deg, rgba(255, 255, 255, 0.07), rgba(0, 28, 47, 0.35));
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 28px 45px rgba(0, 0, 0, 0.28);
        backdrop-filter: blur(8px);
        color: rgba(229, 239, 255, 0.92);
        overflow: hidden;
    }
    .contact-module::after {
        content: '';
        position: absolute;
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(231, 88, 26, 0.32) 0%, rgba(231, 88, 26, 0) 70%);
        top: -60px;
        right: -60px;
        opacity: 0.45;
        pointer-events: none;
    }
    .contact-module h3 {
        font-size: 1.35rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #ffffff;
    }
    .contact-module p {
        margin-bottom: 1.5rem;
        color: rgba(229, 239, 255, 0.78);
    }
    .contact-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }
    .contact-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.7rem;
        padding: 0.65rem 1.2rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(0, 0, 0, 0.12);
        color: #ffd7c2;
        text-decoration: none;
        font-weight: 500;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .contact-pill:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 25px rgba(231, 88, 26, 0.28);
        color: #ffffff;
    }
    .contact-cta {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
        padding: 0.85rem 1.4rem;
        border-radius: 999px;
        background: linear-gradient(120deg, #e7581a, #c08808);
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.06em;
        border: none;
        text-transform: uppercase;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .contact-cta:hover {
        transform: translateY(-4px);
        box-shadow: 0 18px 32px rgba(231, 88, 26, 0.35);
        color: #fff;
    }
    .contact-form-card {
        position: relative;
        padding: 2.4rem 2.2rem;
        border-radius: 26px;
        background: linear-gradient(200deg, rgba(255, 255, 255, 0.07), rgba(0, 28, 47, 0.35));
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: 0 28px 45px rgba(0, 0, 0, 0.28);
        color: #f0f6ff;
        backdrop-filter: blur(8px);
    }
    .contact-form-card::before {
        content: '';
        position: absolute;
        inset: 18px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        pointer-events: none;
    }
    .contact-form-card h2 {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #e7581a;
    }
    .contact-form label {
        font-weight: 500;
        color: rgba(229, 239, 255, 0.85);
        margin-bottom: 0.45rem;
    }
    .contact-form .form-control {
        background: rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 12px;
        color: #fff;
        padding: 0.75rem 1rem;
    }
    .contact-form .form-control:focus {
        box-shadow: 0 0 0 0.2rem rgba(231, 88, 26, 0.25);
        border-color: rgba(231, 88, 26, 0.55);
    }
    .contact-form .form-check-label {
        color: rgba(229, 239, 255, 0.75);
    }
    .contact-form .form-check-input:checked {
        background-color: #e7581a;
        border-color: #e7581a;
    }
    .contact-footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        color: rgba(229, 239, 255, 0.8);
    }
    .contact-footer-tile {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 18px;
        padding: 1.6rem 1.8rem;
        box-shadow: 0 22px 38px rgba(0, 0, 0, 0.25);
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }
    .contact-footer-tile strong {
        color: #ffffff;
        letter-spacing: 0.05em;
        font-size: 0.95rem;
    }
    .contact-footer-tile a {
        color: #ffb47d;
        text-decoration: none;
        font-weight: 600;
    }
    .contact-footer-tile a:hover {
        text-decoration: underline;
    }
    @media (max-width: 575.98px) {
        .contact-hero h1 {
            font-size: 2.2rem;
        }
        .contact-hero p {
            font-size: 1.05rem;
        }
        .contact-grid {
            gap: 1.5rem;
        }
        .contact-module,
        .contact-form-card {
            padding: 1.8rem 1.6rem;
        }
        .contact-actions {
            flex-direction: column;
            align-items: stretch;
        }
        .contact-pill,
        .contact-cta {
            justify-content: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<section class="contact-canvas">
    <div class="container contact-shell">
        <div class="contact-hero">
            <span class="contact-spark">Confidentiel & disponible 7j/7</span>
            <h1>Parlons de votre dossier</h1>
            <p>Nos détectives agréés orchestrent chaque mission avec précision, qu'il s'agisse d'un rendez-vous stratégique, d'une assistance immédiate ou d'un échange sécurisé par écrit. Choisissez le canal qui vous ressemble, nous garantissons une réponse rapide et humaine.</p>
        </div>

        <div class="contact-grid">
            <div class="contact-column contact-column--channels">
                <article class="contact-module">
                    <h3>Rendez-vous immersif</h3>
                    <p>Planifiez un entretien dédié dans nos agendas sécurisés pour cadrer vos objectifs et définir le dispositif d'enquête.</p>
                    <div class="contact-actions">
                        <a href="{{ path('calendar') }}" class="contact-cta">
                            <i class="fas fa-calendar-alt"></i>
                            Agenda en ligne
                        </a>
                        <a href="tel:0465574176" class="contact-pill">
                            <i class="fas fa-phone"></i>
                            04.65.57.41.76
                        </a>
                    </div>
                </article>

                <article class="contact-module">
                    <h3>Conversation instantanée</h3>
                    <p>Accédez à notre messagerie chiffrée pour dialoguer avec un chargé de mission en temps réel et suivre le fil des actions.</p>
                    <div class="contact-actions">
                        <button id="contact-page-chat-btn" class="contact-cta chat-trigger">
                            <i class="fas fa-comments"></i>
                            Lancer le chat
                        </button>
                        <a href="mailto:sne@bensops.fr" class="contact-pill">
                            <i class="fas fa-envelope"></i>
                            sne@bensops.fr
                        </a>
                    </div>
                </article>

                <article class="contact-module">
                    <h3>Briefing confidentiel</h3>
                    <p>Décrivez votre besoin dans un message structuré : analyse juridique, stratégie d'intervention et devis vous sont retournés rapidement.</p>
                    <div class="contact-actions">
                        <a href="#contact-form" class="contact-cta">
                            <i class="fas fa-pen-nib"></i>
                            Déposer un message
                        </a>
                        <span class="contact-pill" style="cursor: default;">
                            <i class="fas fa-map-marker-alt"></i>
                            Marseille / Paris
                        </span>
                    </div>
                </article>
            </div>

            <div class="contact-column">
                <div class="contact-form-card" id="contact-form-card">
                    <h2>Écrire à l'équipe BENSOPS</h2>
                    <form id="contact-form" action="{{ path('contact_send') }}" method="post" class="contact-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="nom" class="form-label">Nom complet</label>
                                <input type="text" class="form-control" id="nom" name="nom" required>
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="col-md-6">
                                <label for="telephone" class="form-label">Téléphone (optionnel)</label>
                                <input type="text" class="form-control" id="telephone" name="telephone">
                            </div>
                            <div class="col-md-6">
                                <label for="sujet" class="form-label">Sujet</label>
                                <input type="text" class="form-control" id="sujet" name="sujet" required>
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label">Votre message</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rgpd" name="rgpd" required>
                                    <label class="form-check-label" for="rgpd">
                                        J'accepte que mes données soient traitées suivant la politique de confidentialité.
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end mt-2">
                                <button type="submit" class="contact-cta" style="padding:0.8rem 1.8rem;">
                                    <i class="fas fa-paper-plane"></i>
                                    Envoyer
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="contact-footer-grid">
            <div class="contact-footer-tile">
                <strong>Présence territoriale</strong>
                <span>Marseille / Paris - Interventions nationales et internationales sur autorisation.</span>
            </div>
            <div class="contact-footer-tile">
                <strong>Ligne directe</strong>
                <a href="tel:0465574176">04.65.57.41.76</a>
                <span>Numéro dédié aux urgences professionnelles et familiales.</span>
            </div>
            <div class="contact-footer-tile">
                <strong>Email sécurisé</strong>
                <a href="mailto:sne@bensops.fr">sne@bensops.fr</a>
                <span>Canal SMTP renforcé, possibilité de chiffrage sur demande.</span>
            </div>
            <div class="contact-footer-tile">
                <strong>Confidentialité</strong>
                <span>Chaque prise de contact est couverte par notre charte RGPD et notre clause de confidentialité.</span>
            </div>
        </div>
    </div>
</section>
{% endblock %}

