{% extends 'base.html.twig' %}

{% block title %}Mentions légales - BENSOPS{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .legal-header {
        background-color: #004373;
        color: white;
        padding: 3rem 0;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }
    .legal-header::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 30%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(231, 88, 26, 0.1));
        z-index: 1;
    }
    .legal-header h1 {
        font-weight: 600;
        margin-bottom: 0;
        position: relative;
        z-index: 2;
    }
    .legal-header h1::after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background-color: #e7581a;
        margin-top: 15px;
    }
    .logo-link {
        display: inline-block;
        padding: 10px;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        z-index: 2;
    }
    .legal-header .logo-legal {
        max-width: 200px;
        height: auto;
        filter: brightness(0.45) grayscale(18%) drop-shadow(0 0 2px #003366);
        transition: all 0.5s ease;
    }
    .logo-link:hover .logo-legal {
        filter: brightness(0.95) grayscale(0%) drop-shadow(0 0 0 #000);
        background: #e7581a;
        border-radius: 12px;
        box-shadow: 0 0 0 6px #e7581a, 0 0 32px 0 #e7581a99;
        transform: scale(1.05);
        transition: all 0.3s cubic-bezier(.4,2,.6,1);
    }
    .logo-link:hover {
        background: #e7581a;
        border-radius: 12px;
        transform: translateY(-5px);
        box-shadow: 0 10px 30px #e7581a99, 0 2px 18px 0 #e7581a;
        transition: all 0.3s cubic-bezier(.4,2,.6,1);
    }
    .legal-content h2 {
        color: #004373;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }
    .legal-content h2::before {
        content: '';
        display: inline-block;
        width: 4px;
        height: 24px;
        background-color: #e7581a;
        margin-right: 15px;
        border-radius: 2px;
    }
    .legal-content p {
        line-height: 1.6;
        color: #333;
    }
    .bg-light {
        border-left: 3px solid #e7581a;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .bg-light:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(231, 88, 26, 0.1);
    }
</style>
{% endblock %}

{% block body %}
