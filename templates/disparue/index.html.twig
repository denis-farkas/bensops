{% extends 'base.html.twig' %}

{% block title %}Personnes disparues ou introuvables{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .disparue-luxe {
        position: relative;
        padding: 5rem 0 6rem;
        background: radial-gradient(120% 120% at 0% 0%, #0a1020 0%, #050714 55%, #01030a 100%);
        color: rgba(233, 237, 255, 0.88);
        overflow: hidden;
    }
    .disparue-luxe::before,
    .disparue-luxe::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        filter: blur(52px);
        opacity: 0.55;
        pointer-events: none;
    }
    .disparue-luxe::before {
        width: 620px;
        height: 620px;
        top: -210px;
        left: -180px;
        background: radial-gradient(circle, rgba(73, 123, 233, 0.34) 0%, rgba(73, 123, 233, 0) 70%);
    }
    .disparue-luxe::after {
        width: 520px;
        height: 520px;
        bottom: -220px;
        right: -160px;
        background: radial-gradient(circle, rgba(231, 88, 26, 0.32) 0%, rgba(231, 88, 26, 0) 70%);
    }
    .disparue-shell {
        position: relative;
        z-index: 1;
        max-width: 1180px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }
    .disparue-hero {
        text-align: center;
        margin-bottom: 3.8rem;
    }
    .disparue-hero .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.4rem;
        border-radius: 999px;
